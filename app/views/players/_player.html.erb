<header class="pb-3">
  <h1><%= @player.name %></h1>
  <small><%= t '.synchronized' %> <%= time_ago @player.synchronized_at %></small>
</header>

<h3><%= t('.rivals') %></h3>
<%= render 'rivals' %>

<h3><%= t('.battles') %></h3>
<div class="d-flex flex-column gap-3">
  <% @battles.each do |battle| %>
    <%= render 'battles/battle', battle:, pov: @player %>
  <% end %>
</div>
